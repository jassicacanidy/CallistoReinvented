<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<body>
  <div class="navbar navbar-inverse navbar-fixed-top hidden-print">
    <div class="container">
      <div class="navbar-header">
          <a class="navbar-brand" href="/">
            <i class="fa fa-bars fa-lg"></i>
            Callisto ReInvented
          </a>
        </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "DashBoard", '/users/dashboard' %></li>
        <li><%= link_to "Calendar", '/users/calendar' %></li>
        <li><%= link_to "Jobs", '/users/jobs' %></li>
      </ul>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <!-- nav bar buttons go here if needed -->
          </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign In",  new_user_session_path %></li>
        </ul>
      </div>
    </div>
  </div>
  <h2>   Edit Account for <%= current_user.email %></h2>
  <br></br>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <div><%= f.label :email, class: "col-sm-2 control-label"%>
                  <%= f.email_field :email, autofocus: true %></div>
                </div>

                <div class="form-group">
                  <div><%= f.label :password, class: "col-sm-2 control-label"%>
                  <%= f.password_field :password, autocomplete: "off" %></div>
                </div>

                <div class="form-group">
                  <div><%= f.label :password_confirmation, class: "col-sm-2 control-label"%>
                  <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
                </div>

                <div class="form-group">
                  <div><%= f.label :current_password, class: "col-sm-2 control-label"%>
                  <%= f.password_field :current_password, autocomplete: "off" %></div>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>


                <% if current_user.type == "Employer" %>
                  <div class="form-group">
                    <div><%= f.label :company_name, class: "col-sm-2 control-label"%>
                    <%= f.text_field :company_name, autocomplete: "off" %></div>
                  </div>
                <% end %>
                <% if current_user.type == "Student" %>
                  <div class="form-group">
                    <div><%= f.label :skill, class: "col-sm-2 control-label"%>
                    <%= f.text_area :skill, autocomplete: "off" %></div>
                  </div>
                <% else %>
                  <div><%= f.label :type %><br />
                    <%= f.select :type, User::TYPES %></div>
                <% end %>

                <div class="form-group col-lg-1">
                  <%= f.submit "Update", class: "btn btn-primary"  %>
                </div>
                <div class="form-group col-lg-1"><a href="/profile"><button class="btn btn-primary">Cancel</button></a>
                </div>
              <% end %>

                



             
  <div id="footer">
    <div class="navbar navbar-inner  navbar-fixed-bottom">
      <div class="form-group"><center>Unhappy? <%= link_to "Click here", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> to cancel your account</center>
      </div>
  </div>  
</body>
