<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
          <a class="navbar-brand" href="#">CR</a>
        </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "DashBoard", '/users/dashboard' %></li>
        <li><%= link_to "Event", '/users/calendar' %></li>
        <li><%= link_to "Jobs", '/users/jobs' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <form class="navbar-form pull-right" role="search">
            <ul><button class="btn btn-primary"><%= link_to "Sign in",  new_user_session_path %></button></ul>
        </form>
        
      </ul>
    </div>
  </div>

<div class="container" style="width:500px;margin: 0 auto;">      
    <h1>Sign up</h1>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
        <h5><%= f.label :type %><small> Choose a user type</small></h5>
        <%= f.select :type, User::TYPES %>
    </div>

    <div class="form-group">
        <h5><%= f.label :email %></h5>
        <%= f.text_field :email, class: "form-control",autofocus: true %>
    </div>

    <div class="form-group">
        <h5><%= f.label :password %><small> Must be great than 0 and less than 8</small></h5>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
        <h5><%= f.label :skill %><small> If you are a Student | Separated by commas</small></h5>
        <%= f.text_area :skill, autocomplete: "off", class: "form-control" %>
    </div>

   <div class="form-group">
        <h5><%= f.label :company_name %><small> If you are an Employer</small></h5>
        <%= f.text_field :company_name, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>

    <% end %>

    <footer class="footer">
        <p class="muted credit"><center>Callisto ReInvented | 2014</center></p>
    </footer>
</body>