        <div class="panel-heading">
          <p class="list-group-item-text">hosted by <h4><%= @event.event_company %></h4> <i class="fa fa-at"></i> <%= @event.event_date %></p>
        </div>
        <div class="panel-body">
          <%= @event.event_info %>
        </div>
      </div>

