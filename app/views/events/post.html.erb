	<div class="container" style="height:500px;">
		<div class="row">
			<div class="col-md-9">
				<div class="row">
					<h1 class="page-header">
                        <%= @event.event_title %>
                    </h1>
					<div class="col-md-3">
						<div class="panel panel-default">
						 	<div class="panel-body">
                                <%= @event.event_type %>
						 	</div>
						</div>
						<div class="panel panel-default">
						 	<div class="panel-body">
                                <%= @event.event_date %>
						 	</div>
						</div>
					</div>
					<div class="col-md-9">
						<div class="panel panel-default">
						 	<div class="panel-body">
                                <%= @event.event_info %>
						 	</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-xs-3">
				<br></br>
				<div class="list-group">
				  <a href="https://www.google.com/about/careers/search?src=Online/TOPs/NA+Tech+University#!t=jo&jid=3256001" target="_blank" class="list-group-item active">
